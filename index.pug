- let innerPedals = 12

mixin Pedal( width, height, ring_size, dash_or_dot)
    .pedal.pedal-shell.(class="ring-r" + ring_size)
        .pedal.pedal-whitespace 
            if dash_or_dot === 'dash'
                .pedal.pedal-dash 
            else
                .pedal.pedal-dot

mixin Ring()
    .ring-body(class="ring-r" + ring_size)
        .ring-whitespace 

